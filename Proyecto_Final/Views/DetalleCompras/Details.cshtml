<body>
    <div class="container">
        <!-- Navegación -->
        <nav>
            <a href="#" class="logo">BuildMart</a>
            <div class="login">
                <button type="button" class="btn btn-dark">
                    <a asp-controller="Home" asp-action="Index" class="signup" style="color: white;">Inicio</a>
                </button>
            </div>
        </nav>
        <!-- Título -->
        <h1 style="text-align: center;">Detalles de la Compra</h1>
        <hr />
        <!-- Tablas -->
        <div class="formEdit">
            <dl class="row">
                </dd>
                <dt class="col-sm-2">
                    Id_Compra
                </dt>
                <dd class="col-sm-10" style="margin-right: 10px">
                    @Html.DisplayFor(model => model.IdcompraNavigation.Idcompra)
                </dd>
                <dt class="col-sm-2">
                    Id_Producto
                </dt>
                <dd class="col-sm-10" style="margin-right: 10px">
                    @Html.DisplayFor(model => model.IdproductoNavigation.Idproducto)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Cantidad)
                </dt>
                <dd class="col-sm-10" style="margin-right: 10px">
                    @Html.DisplayFor(model => model.Cantidad)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PrecioUnitario)
                </dt>
                <dd class="col-sm-10" style="margin-right: 10px">
                    @Html.DisplayFor(model => model.PrecioUnitario)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Subtotal)
                </dt>
                <dd class="col-sm-10" style="margin-right: 10px">
                    @Html.DisplayFor(model => model.Subtotal)
                <dd>
                    <button type="button" class="btn btn-primary" style="margin-top: 10px;">
                        <a asp-action="Edit" asp-route-id="@Model?.IddetalleCompra" style="color: white; text-decoration: none;">Editar</a>
                    </button>
                    <button type="button" class="btn btn-dark" style="margin-top: 10px;">
                        <a asp-action="Index" style="color: white; text-decoration: none;">Volver a la lista</a>
                    </button>
                </dd>
            </dl>
        </div>
