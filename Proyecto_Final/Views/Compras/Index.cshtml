@model IEnumerable<Proyecto_Final.Models.Compra>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<p>
    <a asp-controller="DetalleCompras" asp-action="Index">Detalle Compras</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdproveedorNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdproveedorNavigation.Idproveedor)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Idcompra">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Idcompra">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Idcompra">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
