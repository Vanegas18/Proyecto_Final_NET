@model Proyecto_Final.Models.Proveedore

@{
    ViewData["Title"] = "Proveedores - ";
}

<head>
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
</head>

<style>
    h1 {
        font-size: 2.5em;
        margin-bottom: 10px;
        margin-top: 50px;
        margin-left: 80px;
    }

    hr {
        width: 50%;
        margin-left: 350px;
        border: 1px solid #000;
    }

    .form-container {
        height: 100vh;
        width: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        margin-left: 50px;
        margin-top: -70px;
    }

    .control-label {
        font-weight: bold;
        text-transform: uppercase;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        font-weight: 500;
    }

    .text-danger {
        color: #e74c3c;
    }

    .form-box {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

        .form-box:hover {
            transform: scale(1.05);
        }
</style>

<body>
    <div class="container">
        <nav>
            <a href="#" class="logo">BuildMart</a>
            <div class="links">
                <a asp-controller="Home" asp-action="Dashboard">Inicio</a>
            </div>
            <div class="login">
                <button type="button" class="btn btn-dark">
                    <a asp-controller="Home" asp-action="Dashboard" class="signup" style="color: white;">Cerrar Sesión</a>
                </button>
            </div>
        </nav>
        <h1 style="text-align: center;">AÑADIR PROVEEDOR</h1>
        <hr>
        <div class="form-container">
            <div class="col-md-4 form-box">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Direccion" class="control-label"></label>
                        <input asp-for="Direccion" class="form-control" />
                        <span asp-validation-for="Direccion" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Telefono" class="control-label"></label>
                        <input asp-for="Telefono" class="form-control" />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Correo" class="control-label"></label>
                        <input asp-for="Correo" class="form-control" />
                        <span asp-validation-for="Correo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IdcategoriaProveedor" class="control-label"></label>
                        <select asp-for="IdcategoriaProveedor" class="form-control" asp-items="ViewBag.IdcategoriaProveedor"></select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Crear" class="btn btn-primary" />
                        <button type="button" class="btn btn-dark">
                            <a asp-action="Index" style="color: white; text-decoration: none;">Cancelar</a>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
